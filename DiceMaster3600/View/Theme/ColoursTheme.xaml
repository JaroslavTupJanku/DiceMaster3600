<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="MeoptaLogoBlack">#000000</Color>
    <Color x:Key="MeoptaLogoWhite">#FFFFFF</Color>

    <!-- Complementary / Secondary Colors -->
    <Color x:Key="MeoptaBlue">#1A4C8C</Color>
    <Color x:Key="MeoptaBronze">#BEA04D</Color>
    <Color x:Key="MeoptaYellow">#E7B035</Color>

    <!-- Additional Background Colors -->
    <Color x:Key="MeoptaBackground">#D3D6D9</Color>
    <Color x:Key="MeoptaDarkerBackground">#ABAEAC</Color>
    <Color x:Key="MeoptaDarkBackground">#4D4A3A</Color>

    <!-- Usage for SolidColorBrush -->
    <SolidColorBrush x:Key="MeoptaLogoBlackBrush" Color="{StaticResource MeoptaLogoBlack}"/>
    <SolidColorBrush x:Key="MeoptaLogoWhiteBrush" Color="{StaticResource MeoptaLogoWhite}"/>
    <SolidColorBrush x:Key="MeoptaBlueBrush" Color="{StaticResource MeoptaBlue}"/>
    <SolidColorBrush x:Key="MeoptaBronzeBrush" Color="{StaticResource MeoptaBronze}"/>
    <SolidColorBrush x:Key="MeoptaYellowBrush" Color="{StaticResource MeoptaYellow}"/>

    <!-- Additional SolidColorBrushes for Background Colors -->
    <SolidColorBrush x:Key="MeoptaBackgroundBrush" Color="{StaticResource MeoptaBackground}"/>
    <SolidColorBrush x:Key="MeoptaDarkerBackgroundBrush" Color="{StaticResource MeoptaDarkerBackground}"/>
    <SolidColorBrush x:Key="MeoptaDarkBackgroundBrush" Color="{StaticResource MeoptaDarkBackground}"/>

</ResourceDictionary>